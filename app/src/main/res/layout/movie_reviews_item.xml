<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_author"
        android:paddingLeft="@dimen/padding_syn_left"
        android:paddingRight="@dimen/padding_std_right"
        android:paddingTop="@dimen/padding_syn_top"
        android:paddingBottom="@dimen/padding_syn_bottom"
        android:textSize="@dimen/text_size_xsyn"
        android:textColor="@color/colorBlackText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_content"
        android:paddingLeft="@dimen/padding_syn_left"
        android:paddingRight="@dimen/padding_std_right"
        android:paddingTop="@dimen/padding_syn_top"
        android:paddingBottom="@dimen/padding_syn_bottom"
        android:textSize="@dimen/text_size_syn"
        android:textColor="@color/colorLighterText" />

</LinearLayout>