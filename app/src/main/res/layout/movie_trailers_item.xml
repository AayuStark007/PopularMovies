<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_syn_bottom">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trailer_title"
        android:paddingLeft="@dimen/padding_syn_left"
        android:paddingRight="@dimen/padding_std_right"
        android:paddingTop="@dimen/padding_syn_top"
        android:paddingBottom="@dimen/padding_syn_bottom"
        android:textSize="@dimen/text_size_xsyn"
        android:textColor="@color/colorBlackText" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/trailer_image"
        android:paddingLeft="@dimen/padding_syn_left"
        android:paddingRight="@dimen/padding_std_right"
        android:paddingTop="@dimen/padding_syn_top"
        android:paddingBottom="@dimen/padding_syn_bottom" />

</LinearLayout>